---
const { id,slug, data } = Astro.props.post;
console.log(Astro.props);
const formattedDate = data ? new Intl.DateTimeFormat('en-US', { dateStyle: 'full' }).format(new Date(data.date)) : '';
---

  

<style>
.blog-card {
  display: flex;
  flex-direction: column;
  text-align: left;
  font-size: 25px;
  font-weight: 500;
  background-color: white;
  color: rgb(0, 0, 0);
  border-radius: .4rem;
  height: 480px;
  min-height: 350px;
  margin-bottom: 20px;
  min-width: 210px;
  box-shadow: 0 24px 48px 0 rgb(0, 0, 0, .1);
  transition: all .5s ease-in-out;
}

.blog-card .bc_inner {
  width: 100%;
  height: 100%;
}

.blog-card .bc_img {
  width: 100%;
  height: 50%;
  background-size: cover;
  border-top-right-radius: .6rem;
  border-top-left-radius: .6rem;
  transition: transform .8s ease-in-out;
}
alt
.blog-card .bc_img:hover {
  transform: scale(.9);
}

.blog-card ul {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  font-size: 15px;
  font-weight: bolder;
  gap: 5px;
  color: #467fbc;
  padding: 15px 10px;
}

.blog-card h5 {
  font-size: 20px;
  font-weight: 700;
  line-height: 25px;
  padding: 0 10px;
  color: rgb(33, 37, 41);
  word-break: keep-all;
}

.blog-card img {
  width: 100%; /* Provide a fallback value or adjust according to your needs */
  height: 50%;
}

.blog-card a {
  color: black;
  width: 100%;
  height: 100%;
  text-decoration: none;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.blog-card .bc_meta {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 13px;
  margin-bottom: 15px;
  margin-left: 10px;
}

.blog-card .bc_meta .img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: contain;
  padding: 2px;
  background-color: rgba(0, 0, 0, .05);
}

.blog-card .bc_meta .data {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 100%;
}

.blog-card .bc_meta p {
  font-size: 14px;
  font-weight: 400;
  color: rgb(130, 130, 130);
}

.blog-card .bc_meta p:first-child {
  font-size: 16px;
  font-weight: 700;
  color: rgb(130, 130, 130);
}

.blog-card .bc_meta .data {
  color: black;
}

</style>

<div class="blog-card">
  <a href={`blog/${slug}`} class="between">
    <div class="bc_inner">

      <div class="bc_img" style={`width: 100%; min-height: 50%; background-image: url('${data.imageUrl}'); background-position: center; object-fit: cover; background-repeat: no-repeat; background-size: cover; border-top-right-radius: .6rem; border-top-left-radius: .6rem;`}></div>

      <ul>
        <li>#{data.category}</li>
      </ul>
      <h5>{data.title}</h5>
    </div>

    <div class="bc_meta">
      <img class="img" src={data.avatarUrl || "/images/So-max_Mountain.png"} alt="Author image">

      <div class="data">
        <p>{data.author}</p>  
        <p>{formattedDate}</p>     
      </div>
    </div>
  </a>
</div>
